    <% layout("/layouts/boilerplate") %>
    <style>
        #filters{
            display: flex;
            flex-direction: row;
            gap: 2.5rem;
        }
        .filter{
            text-align: center;
            opacity: 0.7;

        }
        .filter:hover{
            opacity: 1.0;
        }

        .filter p{
            font-size: 0.8rem;
        }
        .filter i{
            font-size: 1.4rem;
        }
        #switch{
            border: 2px solid rgba(128, 128, 128, 0.385);
            padding: 1rem;
            border-radius: 10px;
            margin-left: 8rem;
            margin-bottom: 1rem;
        }
        .Info-switch{
            display: none;
        }
    </style>
 
    <body>
        <div id="filters">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
             <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-house"></i></i></div>
                <p>Cabins</p>
            </div>
             <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-building"></i></div>
                <p>Iconic-cities</p>
            </div>
             <div class="filter">
                <div><i class="fa-solid fa-mountain-sun"></i></div>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Historic</p>
            </div>
             <div class="filter">
                <div><i class="fa-solid fa-water-ladder"></i></div>
                <p>Swmming-pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
             <div class="filter">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>
            <div>
                <div id="switch" class="form-check-reverse form-switch ">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display taxes before total</label>
                </div>
            </div>
        </div>
        <div class="row row-cols-xl-3 row-cols-md-3 row-cols-sm-2">
          <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id  %>" class="listing-link">
                <div class="card col" >
            <img src="<%= listing.image.url  %>" class="card-img-top" alt="..." style="height: 16rem;">
                <div class="card-img-overlay"></div>
        <div class="card-body">
            <b><p><%= listing.title  %></b> <br>
                &#8377;<%= listing.price.toLocaleString("en-IN") %> /night 
                <i class="Info-switch"> +18% GST</i>
            </p>
        </div>
        </div>
            </a>
        <% } %>  

    </div>
</body>
    <script>
        let switchToggle = document.getElementById("switchCheckDefault");
        switchToggle.addEventListener("click",()=>{
            let taxinfo = document.getElementsByClassName("Info-switch")
            for(info of taxinfo){
                if(info.style.display != "inline"){
                 info.style.display = "inline"
                }
                else{
                    info.style.display = "none"
                }
            }
        })
    </script>


